if !exists('g:ProjectName') || g:ProjectName != "<Project Name Here>" 
    let g:ProjectName = "<Project Name Here>"
    let g:BuildDir = "../build"

    echo "Opening Project: " . g:ProjectName . "..."

    silent args *.cpp *.h
    silent bd 1
    silent vsplit
    silent wincmd w
    if exists('g:PlatformPrefix')
        silent exe "b" g:PlatformPrefix
    else
        call PrintError("Project Error: Unkown Platform")
    endif
endif

