# i3 Gaps Configuration
gaps inner 10
gaps outer 10
for_window [class="^.*"] border pixel 5

# Super for mod key
set $mod Mod4

# Font
font pango:Noto Sans CJK JP 11

# Start terminal
bindsym $mod+Return exec --no-startup-id gnome-terminal

# Kill focused window
bindsym $mod+Shift+q kill

# Show Rofi
bindsym $mod+d exec --no-startup-id  rofi -show drun

# Change Focus
# jkl; Keys
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# Arrow Keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move Windows
# jkl; Keys
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# Arrow Keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split Horizontally or Vertically
bindsym $mod+v split v
bindsym $mod+h split h

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Drag floating windows while holding Mod
# Toggle floating
floating_modifier $mod
bindsym $mod+Shift+space floating toggle

# Lock screen
bindsym $mod+Shift+x exec --no-startup-id lock

# Workspace Names
set $ws1 1: Internet
set $ws2 2: Terminal
set $ws3 3: Code
set $ws4 4: Misc
set $ws5 5: Misc
set $ws6 6: Misc
set $ws7 7: Steam
set $ws8 8: VLC
set $ws9 9: Discord
set $ws10 10: Music

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Dual Screen stuff
set $mon1 DVI-D-0
set $mon2 DVI-I-1

workspace "$ws3" output $mon1
workspace "$ws7" output $mon1

workspace "$ws2" output $mon2
workspace "$ws1"  output $mon2
workspace "$ws9"  output $mon2
workspace "$ws10" output $mon2

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Place certain applications in given workspaces
for_window [class="Spotify"] move to workspace $ws10
assign [class="Quodlibet"] $ws10
assign [class="discord"] $ws9
assign [class="Vlc"] $ws8
assign [class="Steam"] $ws7

# Make certain applications floating by default
for_window [class="feh"] floating enable
for_window [class="Eog"] floating enable
for_window [title="Page Unresponsive"] floating enable
for_window [class="com-intellij-updater-Runner"] floating enable

# Godot
for_window [instance="Godot_ProjectList"] floating disable
for_window [instance="Godot_Editor"] floating disable
for_window [instance="Godot_Engine"] floating enable

# Steam
for_window [class="^Steam$" title="^Friends$"] floating enable
for_window [class="^Steam$" title="Steam - News"] floating enable
for_window [class="^Steam$" title=".* - Chat"] floating enable
for_window [class="^Steam$" title="^Settings$"] floating enable
for_window [class="^Steam$" title=".* - event started"] floating enable
for_window [class="^Steam$" title=".* CD key"] floating enable
for_window [class="^Steam$" title="^Steam - Self Updater$"] floating enable
for_window [class="^Steam$" title="^Screenshot Uploader$"] floating enable
for_window [class="^Steam$" title="^Steam Guard - Computer Authorization Required$"] floating enable
for_window [title="^Steam Keyboard$"] floating enable

# Reload configuration
bindsym $mod+Shift+c reload
# Restart configuration
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Resize window
mode "Resize Mode" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon grow shrink width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "Resize Mode"

# Colours from Xresources
set_from_resource $backColour           i3wm.color0 #2F343F
set_from_resource $inactiveBackColour   i3wm.color0 #2F343F
set_from_resource $textColour           i3wm.color7 #F3F4F5
set_from_resource $inactiveTextColour   i3wm.color3 #676E7D
set_from_resource $urgentColour         i3wm.color2 #E53935

set_from_resource $borderColour         i3wm.color3 #2F343F
set_from_resource $inactiveBorderColour i3wm.color0 #676E7D

#
# Window Colours
#                       Border               Background            Text                 Indicator              Child Border
client.focused          $borderColour        $backColour           $textColour          $borderColour          $borderColour
client.unfocused        $borderColour        $inactiveBackColour   $inactiveTextColour  $inactiveBorderColour  $inactiveBorderColour

client.focused_inactive $borderColour        $inactiveBackColour   $inactiveTextColour  $inactiveBorderColour  $inactiveBorderColour
client.urgent           $borderColour        $urgentColour         $textColour          $borderColour          $urgentColour
client.placeholder      $backColour          $backColour           $textColour          $backColour            $borderColour
client.background       $backColour

hide_edge_borders both

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Media player controls
bindsym --release XF86AudioPlay exec --no-startup-id mediactrl toggle
bindsym --release XF86AudioNext exec --no-startup-id mediactrl next
bindsym --release XF86AudioPrev exec --no-startup-id mediactrl prev

# Screenshots
bindsym Print exec --no-startup-id scrot ~/Pictures/Screenshots/%Y-%m-%d-%T.png
bindsym Mod1+Sys_Req exec --no-startup-id scrot -u ~/Pictures/Screenshots/%Y-%m-%d-%T.png

# Polybar
exec_always --no-startup-id $HOME/.config/polybar/launch &

# Keep system awake if fullscreen app is focused
exec --no-startup-id setsid wakeup 550 >/dev/null 2>&1 < /dev/null &

# Launch programs
exec --no-startup-id redshift

# Startup options
exec_always --no-startup-id setxkbmap -layout gb
exec_always --no-startup-id export GTK2_RC_FILES=$HOME/.gtkrc-2.0
exec_always --no-startup-id xset -b

