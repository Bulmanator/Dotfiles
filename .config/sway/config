# Gaps and outline
gaps inner 8
gaps outer 8
default_border pixel 3

# Use Noto Sans CJK for nice looking Japanese characters
font pango:Noto Sans CJK JP 10

# Terminal Alacritty, works pretty well across wayland and xorg
set $term alacritty

# Use rofi as menu
set $menu rofi -modi drun -show

# Set background
output * bg ~/Pictures/Backgrounds/40417845223_45b71c8904_o_4k.jpg fill

# From left to right
set $mon1 DVI-D-1
set $mon2 DP-1
set $mon3 DP-2

# Setup displays
output $mon1 position 0,0 mode 1920x1080@60Hz

output $mon2 position 1920,0 mode 3840x2160@60Hz scale 2 adaptive_sync on
focus output $mon2

output $mon3 position 3840,0 mode 1920x1080@144Hz

# Workspace names. Numbers will be stripped when displaying
set $ws1  1
set $ws2  2
set $ws3  3
set $ws4  4
set $ws5  5
set $ws6  6
set $ws7  7
set $ws8  8
set $ws9  9
set $ws10 10

# Send specific workspaces to specific displays
workspace "$ws1"  output $mon1
workspace "$ws9"  output $mon1
workspace "$ws10" output $mon1

workspace "$ws3" output $mon2
workspace "$ws8" output $mon2

workspace "$ws2" output $mon3
workspace "$ws7" output $mon3

# Set input to be UK keyboard layout and use caps as escape for vim
input "type:keyboard" {
    xkb_layout gb
    xkb_options caps:swapescape
}

# Simple bar for now
bar {
    id 1

    font Noto Sans CJK JP 10

    position top
    strip_workspace_numbers yes

    gaps 10

    # @Todo(James): swaybar supports blocks via its json protocol. Come up with
    # a system to have more than one thing on here. This will do for now
    status_command while date +'  %a %d %b, %H:%M'; do sleep 1; done

    colors {
        statusline #FFFFFF
        background #232323
        active_workspace   #232323 #232323 #424242
        inactive_workspace #232323 #232323 #424242
        focused_workspace  #151515 #151515 #FFFFFF
    }
}

#
# Keybinds
#

# Mod on Super
set $mod Mod4

floating_modifier $mod normal

set $left  h
set $right l
set $up    k
set $down  j

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu

bindsym $mod+Shift+c reload

bindsym $mod+Shift+e exec swaynag -t warning -m 'Are you sure you want to exit?' -b 'Yes' 'swaymsg exit'

bindsym $mod+$left  focus left
bindsym $mod+$right focus right
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up

bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+f fullscreen

bindsym $mod+Shift+space floating toggle

include /etc/sway/config.d/*
