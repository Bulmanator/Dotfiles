[colors]
background = ${xrdb:color0:#222}
background-alt = #444
foreground = ${xrdb:color7:#222}
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[colours]
bg = ${xrdb:color0}
fg = ${xrdb:color7}
colour0  = ${xrdb:color0}
colour1  = ${xrdb:color1}
colour2  = ${xrdb:color2}
colour3  = ${xrdb:color3}
colour4  = ${xrdb:color4}
colour5  = ${xrdb:color5}
colour6  = ${xrdb:color6}
colour7  = ${xrdb:color7}
colour8  = ${xrdb:color8}
colour9  = ${xrdb:color9}
colour10 = ${xrdb:color10}
colour11 = ${xrdb:color11}
colour12 = ${xrdb:color12}
colour13 = ${xrdb:color13}
colour14 = ${xrdb:color14}
colour15 = ${xrdb:color15}

[bar/Main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = true

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2 
overline-color = #f00

#overline-size = 2
#overline-color = #00f

border-left-size = 4
border-right-size = 4
border-top-size = 4
border-color = ${colors.background}

;padding-left = 2
;padding-right = 2

module-margin-left = 2
module-margin-right = 2
module-margin-top = 2
module-foreground = ${colours.fg}

font-0 = SourceHanSans:size=11
font-1 = WunconSiji:size=15
font-2 = PolybarFont:pixelsize=11
font-3 = DejaVuSans:pixelsize=11

modules-left = i3
modules-center = music 
modules-right = wlan eth temperature cpu volume xbacklight battery date
;xbacklight volume cpu battery wlan temperature date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm

;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÓâØ "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colours.colour8}

label-layout = %layout%
label-layout-underline = ${colours.colour8}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colours.colour8}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-overline= ${colors.alert}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

; Various i3 Parameters
index-sort = true
pin-workspaces = true
strip-wsnumbers = true
wrapping-scroll = false

; Focused Workspace
label-focused = %name%
label-focused-background = ${colours.bg}
label-focused-foreground = ${colours.fg}
label-focused-padding = 2
label-focused-underline = ${colours.colour3}

; Unfocused Workspace
label-unfocused = %name%
label-unfocused-background = ${colours.bg}
label-unfocused-foreground = ${colours.colour3}
label-unfocused-padding = 2

; Visible Workspace
label-visible = %name%
label-visible-background = ${colours.bg}
label-visible-foreground = ${colours.colour3}
label-visible-padding = 2

; Urgent Workspace
label-urgent = %name%
label-urgent-background = ${colours.colour4}
label-urgent-foreground = ${colours.fg}
label-urgent-padding = 2


[module/music]
type = custom/script
exec = mediactrl
interval = 5
format-prefix = "ÔÄ• "
format-underline = ${colours.colour3}
click-left = mediactrl prev
click-right = mediactrl next

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = ÓÇñ
icon-stop = ÓÇô
icon-play = ÓÇö
icon-pause = ÓÇõ
icon-next = ÓÇú

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/backlight
card = intel_backlight

format = <ramp> <label>
format-underline = ${colours.colour12}

ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 3

format-prefix = "Ôáæ "
format = <label>
format-underline = ${colours.colour12}
label = %percentage%%


[module/cpu1]
type = internal/cpu
interval = 2
;format-active-font = 3
format-prefix = "ÓÄ¶ "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colours.colour14}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ÓÄ® "
format-prefix-foreground = ${colors.foreground-alt}
format-overline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp2s0 
interval = 10

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colours.colour14}
label-connected = %essid% (%signal%%)

format-disconnected = 
;format-disconnected = <label-disconnected>
;format-disconnected-overline = ${self.format-connected-overline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = "Ó§Ö "
ramp-signal-1 = "Ó§á "
ramp-signal-2 = "Ó§â "
ramp-signal-3 = "Ó§ã "
ramp-signal-4 = "Ó§å "
ramp-signal-foreground = ${colours.fg}

[module/eth]
type = internal/network
interval = 10

interface = eth0

format-connected-prefix = "Ó§Ä "
format-connected = <label-connected>
label-connected = "Wired Connection"
format-connected-underline = ${colours.colour14}

format-disconnected = 


[module/eth1]
type = internal/network
interface = 
interval = 3.0

format-connected-overline = #55aa55
format-connected-prefix = "ÓÜú "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-overline = ${self.format-connected-overline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = %a %d %b,
; date-alt = " %Y-%m-%d"

time = %H:%M
; time-alt = %H:%M:%S

format-prefix = "ÔÄó "
format-underline = ${colours.colour14} 

label = %date% %time%

[module/volume]
type = internal/volume

master-soundcard = default

ramp-volume-0 = "Ó§Ç "
ramp-volume-1 = "Ó§Å "
ramp-volume-2 = "Ó§Ñ "

format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colours.colour11}
label-muted = Ó§É  %percentage%%
label-muted-foreground = ${colours.colour3}


[module/volume1]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = "ÓàÇ "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ‚îÄ
bar-volume-fill-font = 2
bar-volume-empty = ‚îÄ
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC
full-at = 96

; Discharging
ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${colours.fg}
format-discharging-underline = ${colours.colour13}

; Charging
animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-foreground = ${colours.fg}
animation-charging-framerate = 750

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colours.fg}
format-charging-underline = ${colours.colour13}

; Fully Charged
format-full-prefix = "ÔâÄ "
format-full-foreground = ${colours.fg}
format-full-underline = ${colours.colour13}


[module/temperature]
type = internal/temperature
interval = 10

hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input
warn-temperature = 80

ramp-0 = "Ôãã "
ramp-1 = "Ôãä "
ramp-2 = "Ôãâ "
ramp-3 = "Ôãà "
ramp-4 = "Ôãá "
ramp-foreground = ${colours.fg}

format = <ramp> <label>
format-underline = ${colours.colour13}

format-warn = <ramp> <label-warn>
format-warn-underline = #F00

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colours.colour3}

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = ÓÑå
label-open-foreground = ${colors.secondary}
label-close = ÓÅ• cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
