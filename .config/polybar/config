[module/i3]
type = internal/i3
format = <label-state> <label-mode>

; Various i3 Parameters
index-sort = true
pin-workspaces = true
strip-wsnumbers = true
wrapping-scroll = false

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colours.colour4}

; Focused Workspace
label-focused = %name%
label-focused-background = ${colours.bg}
label-focused-foreground = ${colours.fg}
label-focused-underline = ${colours.colour3}
label-focused-padding = 4

; Unfocused Workspace
label-unfocused = %name%
label-unfocused-background = ${colours.bg}
label-unfocused-foreground = ${colours.colour3}
label-unfocused-underline = ${colours.fg}
label-unfocused-padding = 4

; Visible Workspace
label-visible = %name%
label-visible-background = ${colours.bg}
label-visible-foreground = ${colours.colour3}
label-visible-underline = ${colours.fg}
label-visible-padding = 4

; Urgent Workspace
label-urgent = %name%
label-urgent-background = ${colours.colour4}
label-urgent-foreground = ${colours.bg}
label-urgent-underline = ${colours.colour3}
label-urgent-padding = 4

